.photo-warp {
  padding-top: 40rpx;
}

.photo-warp ul li {
  float: left;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  width: 200rpx;
  height: 200rpx;
  text-align: center;
  position: relative;
}

.photo-warp ul li .image {
  width: 200rpx;
  height: 200rpx;
}

.photo-warp ul li .close {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  width: 40rpx;
  height: 40rpx;
}

.add-warp {
  float: left;
  position: relative;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #d9d9d9;
}

.add-warp:before, .add-warp:after {
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #d9d9d9;
}

.add-warp:before {
  width: 2px;
  height: 40px;
}

.add-warp:after {
  width: 40px;
  height: 2px;
}

.upload-location {
  margin-top: 20rpx;
}

.text-loaction {
  vertical-align: 2rpx;
  width: 76%;
  display: inline-block;
  font-size: 28rpx;
  height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  -webkit-line-clamp: 1;
}

.icon-location {
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
}

.icon-choose {
  width: 36rpx;
  height: 36rpx;
  float: right;
  margin-right: 40rpx;
  margin-top: 6rpx;
}

.upload-tag {
  font-size: 28rpx;
  margin-left: 20rpx;
  margin-top: 10rpx;
  width: 90%;
}

.upload-tag .tag {
  min-width: 60rpx;
  height: 46rpx;
  line-height: 48rpx;
  font-size: 24rpx;
  border-radius: 40rpx;
  border: 1px solid #8cc252;
  color: #8cc252;
  display: inline-block;
  text-align: center;
  margin-right: 10rpx;
  margin-top: 10rpx;
  padding: 0 20rpx;
}

.upload-tag .icon-open {
  width: 32rpx;
  height: 32rpx;
  margin-left: 15rpx;
  vertical-align: middle;
}

.submit-btn {
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  box-shadow: 0px 1px 4px 1px #ccc;
}
